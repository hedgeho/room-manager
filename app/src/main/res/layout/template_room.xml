<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp">

    <TextView
        android:id="@+id/tv_roomnumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="208"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_seats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="31 место"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_responsible" />

    <TextView
        android:id="@+id/tv_roomtype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="класс информатики"
        app:layout_constraintStart_toEndOf="@+id/tv_roomnumber"
        app:layout_constraintTop_toBottomOf="@+id/tv_roomnumber" />

    <TextView
        android:id="@+id/tv_responsible"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="right|end"
        android:text="Житомирский М. С."
        app:layout_constraintBottom_toBottomOf="@+id/tv_roomnumber"
        app:layout_constraintEnd_toStartOf="@+id/tv_seats"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/tv_roomnumber"
        app:layout_constraintTop_toTopOf="@+id/tv_roomnumber" />
</androidx.constraintlayout.widget.ConstraintLayout>